{
  "name": "create-steam-game",
  "version": "1.0.0",
  "description": "Create steam games with no build configuration.",
  "repository": "https://github.com/meishaFE/create-steam-game.git",
  "author": "jayden <jxdjayden@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^5.6.1",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.0",
    "get-port": "^4.0.0",
    "husky": "^1.1.1",
    "lerna": "^3.4.3",
    "lerna-changelog": "^0.8.0",
    "lint-staged": "^7.3.0",
    "meow": "^5.0.0",
    "prettier": "^1.14.3",
    "strip-ansi": "^5.0.0",
    "tempy": "^0.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  }
}
